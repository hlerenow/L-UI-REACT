{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "declaration": false,
      "paths": {
          "@/*": ["*"],
      }
  },
  "include": [
      "./src/**/*",
      "./demo/**/*",
      "./test/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}