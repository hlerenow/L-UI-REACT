{
  "compilerOptions": {
      "lib": ["es5", "es6", "es7", "es2017", "dom"],
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "paths": {
          "@/*": ["*"],
      },
  },
  "include": [
      "./src/**/*",
      "./demo/**/*",
      "./test/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}